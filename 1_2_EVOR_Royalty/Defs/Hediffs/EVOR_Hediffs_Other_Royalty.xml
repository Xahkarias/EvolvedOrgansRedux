<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
        <defName>EVOR_Other_PsychicInvisibility</defName>
        <label>psychic invisibility</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>Psychically-induced invisibility. This actually affects others nearby, making their brains unable to percieve the sight of this individual, even if the eyes are unaffected.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>700~1500</disappearsAfterTicks>
                <showRemainingTime>True</showRemainingTime>
            </li>
            <li Class="HediffCompProperties">
                <compClass>HediffComp_Invisibility</compClass>
            </li>
        </comps>
    </HediffDef>

</Defs>