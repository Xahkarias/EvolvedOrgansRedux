<Defs>

    <HediffDef>
        <defName>EVOR_Hediff_Damage_Sonic</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
        <label>sonic damage</label>
        <lethalSeverity>4</lethalSeverity>
        <makesSickThought>false</makesSickThought>
        <scenarioCanAdd>true</scenarioCanAdd>
        <!--<taleOnVisible>ToxicityRevealed</taleOnVisible> -->
        <comps>
        <li Class="HediffCompProperties_Immunizable">
            <severityPerDayNotImmune>-1.00</severityPerDayNotImmune>
        </li>
        </comps>
        <description>Disorientation due to the application of loud sound.</description>
        <stages>
            <li>
                <label>initial</label>
                <becomeVisible>false</becomeVisible>
            </li>
            <li>
                <label>initial</label>
                <minSeverity>0.10</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.025</offset>
                    </li>
                </capMods>
                <statOffsets>
					<MeleeDodgeChance>-1</MeleeDodgeChance>
					<MeleeHitChance>-1</MeleeHitChance>
				</statOffsets>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.20</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
                <statOffsets>
					<MeleeDodgeChance>-2</MeleeDodgeChance>
					<MeleeHitChance>-2</MeleeHitChance>
					<MeleeWeapon_CooldownMultiplier>.2</MeleeWeapon_CooldownMultiplier>
				</statOffsets>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.40</minSeverity>
                <vomitMtbDays>5</vomitMtbDays>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.075</offset>
                    </li>
                </capMods>
                <statOffsets>
					<MeleeDodgeChance>-5</MeleeDodgeChance>
					<MeleeHitChance>-5</MeleeHitChance>
					<MeleeWeapon_CooldownMultiplier>.3</MeleeWeapon_CooldownMultiplier>
				</statOffsets>
            </li>
            <li>
                <label>high</label>
                <minSeverity>0.80</minSeverity>
                <vomitMtbDays>5</vomitMtbDays>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.10</offset>
                    </li>
                </capMods>
                <statOffsets>
					<MeleeDodgeChance>-7</MeleeDodgeChance>
					<MeleeHitChance>-7</MeleeHitChance>
					<MeleeWeapon_CooldownMultiplier>.5</MeleeWeapon_CooldownMultiplier>
				</statOffsets>
            </li>
        </stages>
    </HediffDef>

