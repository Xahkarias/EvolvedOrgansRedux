<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ferian Race</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class ="PatchOperationAdd">
					
					<xpath>Defs/RecipeDef[contains(defName, "EVOR_Surgery")]/recipeUsers</xpath>
					<value>
						<li>AFerian</li>
					</value>
				</li>
				<!--Ferian inherits the base human body and uses human meat, but does not inherit recipes-->
				
			</operations>
		</match>
	</Operation>
	
</Patch>

